<section class="video section" id="video">
  <div class="video__container container">
    <div class="video__header-wrapper">
      <h2 class="video__header section__header">
        Video journey
      </h2>
      <div class="video__subheader">
        Enter and visit one of the most famous museums in the world and enjoy masterpieces such as Mona Lisa or Hammurabi's Code
      </div>
    </div>

    <div class="video__content section__content">
      <div class="video__player">
        <div class="video__player-play-wrapper">
          <div class="video__player-play"></div>
        </div>
        <img class="video__img" src="<%- require('../pictures/video/video-img.jpg') %>" alt="video static placeholder">
        <div class="video__controls">
          <button class="video__controls-play"></button>
          <input class="video__controls-progress custom-input-range" type="range" value="40" min="0" max="100" step="1" name="progress">
          <button class="video__controls-mute"></button>
          <input class="video__controls-volume custom-input-range" type="range" value="40" min="0" max="100" step="1" name="progress">
          <button class="video__controls-fullscreen"></button>
        </div>
      </div>
    </div>

    <div class="video__slider video-slider">
      <ul class="video-slider__list">
        <li class="video-slider__item">
          <a href="#video">
            <div class="video-slider__yt-btn"></div>
            <img src="<%- require('../pictures/video/poster0.jpg') %>" alt="video poster">
          </a>
        </li>
        <li class="video-slider__item">
          <a href="#video">
            <div class="video-slider__yt-btn"></div>
            <img src="<%- require('../pictures/video/poster1.jpg') %>" alt="video poster">
          </a>
        </li>
        <li class="video-slider__item">
          <a href="#video">
            <div class="video-slider__yt-btn"></div>
            <img src="<%- require('../pictures/video/poster2.jpg') %>" alt="video poster">
          </a>
        </li>
      </ul>
      <div class="video-slider__controls">
        <div class="video-slider__controls-wrapper">
          <button class="video-slider__controls-prev"></button>
          <div class="video-slider__controls-dots-list">
            <button class="video-slider__controls-dot video-slider__controls-dot_active"></button>
            <button class="video-slider__controls-dot"></button>
            <button class="video-slider__controls-dot"></button>
            <button class="video-slider__controls-dot"></button>
            <button class="video-slider__controls-dot"></button>
          </div>
          <button class="video-slider__controls-next"></button>
        </div>
      </div>
    </div>
  </div>
</section>